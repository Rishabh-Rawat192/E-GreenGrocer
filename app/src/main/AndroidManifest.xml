<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rwtcompany.onlinevegitableshopapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".screen.order.AdminOrdersDescription"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name=".screen.order.AdminOrdersList"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".screen.order.UserOrderDescriptionPage"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".screen.order.UserOrders"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".screen.user.Cart"
            android:screenOrientation="portrait"/>

        <activity android:name=".screen.admin.AdminItemEdit"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".screen.admin.AdminAddItem"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".screen.admin.AdminHomePage"
            android:theme="@style/AdminHomeTheme"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".screen.user.UserHomePage"
            android:screenOrientation="portrait" />

        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".screen.login.MainActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />

    </application>

</manifest>